---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  
  const POSTS_PER_PAGE = 24;
  const totalPages = Math.ceil(sortedPosts.length / POSTS_PER_PAGE);
  
  return Array.from({ length: totalPages }, (_, i) => ({
    params: { page: (i + 1).toString() },
    props: { 
      posts: sortedPosts.slice(i * POSTS_PER_PAGE, (i + 1) * POSTS_PER_PAGE),
      currentPage: i + 1,
      totalPages,
      allPosts: sortedPosts
    }
  }));
}

const { posts, currentPage, totalPages, allPosts } = Astro.props;

// Años disponibles
const years = [...new Set(allPosts.map(p => p.data.date.getFullYear()))].sort().reverse();

function getPostPreview(post) {
  const content = post.body || '';
  
  if (post.data.image) {
    return { type: 'image', value: post.data.image };
  }
  
  if (content.includes('.pdf') || content.includes('pdf-embed') || content.includes('docs.google.com/viewer')) {
    const pdfMatch = content.match(/href="([^"]*\.pdf)"/);
    return { type: 'pdf', value: pdfMatch ? pdfMatch[1] : null };
  }
  
  const plainText = content.replace(/<[^>]*>/g, '').substring(0, 200);
  if (plainText.trim()) {
    return { type: 'text', value: plainText + '...' };
  }
  
  return { type: 'none', value: null };
}
---

<Layout title={`Noticias - Página ${currentPage} - Comunicación ADECRA`}>
  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="mb-10">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Noticias</h1>
        <p class="text-gray-600">{allPosts.length} publicaciones - Página {currentPage} de {totalPages}</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {posts.map((post) => {
          const preview = getPostPreview(post);
          return (
            <a href={`/blog/${post.slug}`} class="block group">
              <article class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-lg hover:border-blue-200 transition-all duration-300 h-full flex flex-col">
                <div class="h-48 bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center relative overflow-hidden">
                  {preview.type === 'image' && (
                    <img 
                      src={preview.value} 
                      alt={post.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                  )}
                  {preview.type === 'pdf' && (
                    <div class="flex flex-col items-center justify-center text-red-500 p-4 text-center">
                      <i class="fas fa-file-pdf text-5xl mb-2"></i>
                      <span class="text-sm font-medium text-red-400">Documento PDF</span>
                    </div>
                  )}
                  {preview.type === 'text' && (
                    <div class="p-4 text-center overflow-hidden">
                      <p class="text-gray-500 text-sm line-clamp-4">{preview.value}</p>
                    </div>
                  )}
                  {preview.type === 'none' && (
                    <i class="fas fa-newspaper text-4xl text-blue-300"></i>
                  )}
                  
                  <div class="absolute top-3 left-3">
                    <span class="bg-white/90 backdrop-blur px-2 py-1 rounded text-xs font-medium text-gray-600">
                      {post.data.date.toLocaleDateString('es-AR', { day: 'numeric', month: 'short' })}
                    </span>
                  </div>
                  
                  {preview.type === 'pdf' && (
                    <div class="absolute top-3 right-3">
                      <span class="bg-red-500 text-white px-2 py-1 rounded text-xs font-medium">
                        <i class="fas fa-file-pdf mr-1"></i>PDF
                      </span>
                    </div>
                  )}
                </div>
                
                <div class="p-5 flex-1 flex flex-col">
                  <h2 class="font-semibold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors line-clamp-2">
                    {post.data.title}
                  </h2>
                  {post.data.description && (
                    <p class="text-gray-500 text-sm line-clamp-3 mt-auto">
                      {post.data.description}
                    </p>
                  )}
                </div>
              </article>
            </a>
          );
        })}
      </div>

      <!-- Paginación -->
      <div class="mt-12 flex justify-center gap-2 flex-wrap">
        {currentPage > 1 && (
          <a 
            href={`/blog/${currentPage - 1}`}
            class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
          >
            ← Anterior
          </a>
        )}
        
        {Array.from({ length: totalPages }, (_, i) => {
          // Mostrar páginas alrededor de la actual (最多 7 páginas)
          const pageNum = i + 1;
          const distance = Math.abs(pageNum - currentPage);
          if (distance > 3 && totalPages > 10) return null;
          
          return (
            <a 
              href={`/blog/${pageNum}`}
              class:list={[
                "px-4 py-2 rounded-lg transition-colors",
                currentPage === pageNum ? "bg-blue-600 text-white" : "bg-white border border-gray-200 hover:bg-gray-50"
              ]}
            >
              {pageNum}
            </a>
          );
        })}
        
        {currentPage < totalPages && (
          <a 
            href={`/blog/${currentPage + 1}`}
            class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
          >
            Siguiente →
          </a>
        )}
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
