---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Función para detectar PDF
function extractPdfUrl(content) {
  // Buscar enlaces a PDF en el contenido
  const pdfMatches = content.match(/href="([^"]*\.pdf)"/g);
  if (pdfMatches && pdfMatches.length > 0) {
    // Extraer URL del primer PDF
    const match = pdfMatches[0].match(/href="([^"]*)"/);
    if (match) {
      let url = match[1];
      // Reemplazar URL de localhost por dominio real
      url = url.replace('http://localhost:8888/comunicacion-adecra', 'https://comunicacion.adecra.org.ar');
      return url;
    }
  }
  return null;
}

const pdfUrl = extractPdfUrl(post.body || '');
const hasPdf = pdfUrl || (post.body || '').includes('.pdf') || (post.body || '').includes('pdf-embed');
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="py-12">
    <div class="container mx-auto px-4 max-w-4xl">
      <a href="/noticias/1" class="text-blue-600 hover:underline mb-6 inline-flex items-center">
        ← Volver a noticias
      </a>
      
      <!-- Imagen o indicador PDF -->
      {post.data.image ? (
        <img 
          src={post.data.image} 
          alt={post.data.title}
          class="w-full h-64 md:h-96 object-cover rounded-xl mb-8"
        />
      ) : hasPdf && pdfUrl ? (
        <div class="bg-red-50 rounded-xl p-6 mb-8">
          <div class="flex items-center gap-3 mb-4">
            <i class="fas fa-file-pdf text-3xl text-red-500"></i>
            <span class="font-medium text-gray-700">Documento PDF adjunto</span>
          </div>
          <a 
            href={pdfUrl}
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 bg-red-500 text-white px-6 py-3 rounded-lg hover:bg-red-600 transition-colors"
          >
            <i class="fas fa-external-link-alt"></i>
            Ver documento PDF
          </a>
        </div>
      ) : null}
      
      <!-- Título y fecha -->
      <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">
        {post.data.title}
      </h1>
      
      <p class="text-gray-500 mb-8">
        {post.data.date.toLocaleDateString('es-AR', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>
      
      <!-- Descripción -->
      {post.data.description && (
        <p class="text-xl text-gray-600 mb-8 leading-relaxed bg-blue-50 p-4 rounded-lg border-l-4 border-blue-500">
          {post.data.description}
        </p>
      )}
      
      <!-- Contenido -->
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
      
      <!-- Botón PDF al final -->
      {hasPdf && pdfUrl && (
        <div class="mt-12 pt-8 border-t">
          <a 
            href={pdfUrl}
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-3 bg-red-600 text-white px-8 py-4 rounded-lg hover:bg-red-700 transition-colors text-lg"
          >
            <i class="fas fa-file-pdf text-xl"></i>
            Descargar documento PDF
          </a>
        </div>
      )}
    </div>
  </article>
</Layout>
