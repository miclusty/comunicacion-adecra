---
import { SEO } from 'astro-seo';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <SEO
      title={title || 'ComunicaciÃ³n - ADECRA + CEDIM'}
      description={description || 'Noticias, eventos y capacitaciones de ADECRA y CEDIM'}
      image={image || 'https://adecra.org.ar/assets/images/logo.png'}
      extend={{
        link: [
          { rel: 'canonical', href: Astro.url.href }
        ],
        meta: [
          { name: 'author', content: 'ADECRA + CEDIM' },
          { property: 'og:locale', content: 'es_AR' },
          { property: 'og:type', content: 'website' }
        ]
      }}
    />
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
